<div class="row">
  <div class="col-md-12">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb pl-0">
        <li class="breadcrumb-item"><a href="<%= business_root_path %>"><i class="fas fa-home"></i> <%= t("business.views.foods.show.home") %></a></li>
        <li class="breadcrumb-item"><a href="<%= business_foods_path %>"><%= t("business.views.foods.show.menu") %></a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= t("business.views.foods.show.product_details") %></li>
      </ol>
    </nav>
  </div>
  <div class=" col-md-6">
    <div class="ms-panel ms-panel-fh">
      <div class="ms-panel-body">
        <h4 class="section-title bold"><%= t("business.views.foods.show.product_info") %></h4>
        <table class="table ms-profile-information">
          <tbody>
            <tr>
              <th scope="row"><%= t("business.views.foods.show.product_name") %></th>
              <td><%= @food_group.name %></td>
            </tr>
            <tr>
              <th scope="row"><%= t("business.views.foods.show.product_name") %></th>
              <td><%= @food_group.description %></td>
            </tr>
          </tbody>
        </table>
        <div class="new">
          <%= link_to t("business.shared.button.edit"), edit_business_food_group_path(@food_group), class: "btn btn-primary" %>
          <%= link_to t("business.shared.button.delete"), business_food_group_path(@food_group), class: "btn btn-secondary", method: :delete %>
        </div>
      </div>
    </div>
  </div>
  <div class=" col-md-6">
    <div class="ms-panel ms-panel-fh">
      <div class="ms-panel-body">
        <h4 class="section-title bold"><%= t("business.views.foods.show.product_info") %></h4>
      </div>
    </div>
  </div>
</div>
