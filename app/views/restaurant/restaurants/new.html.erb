<div class="d-lg-flex half">
  <%= image_pack_tag "media/images/thesmithburger.jpg", class: "bg order-1 order-md-2" %>
    <div class="contents order-2 order-md-1">
      <div class="container">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7">
            <div class="mb-4">
              <h3><%= t("restaurant.restaurants.new.hello") %></h3>
            </div>
            <%= form_for(@restaurant, url: restaurant_register_path) do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
              <div class="form-group first">
                <%= f.text_field :name, class: "form-control", placeholder: t("restaurant.restaurants.new.name") %>
              </div>
              <div class="form-group last mb-3">
                <%= f.text_field :address, class: "form-control", placeholder: t("restaurant.restaurants.new.address") %>
              </div>
              <%= f.submit t("restaurant.restaurants.new.submit"), class: "btn btn-block btn-primary" %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
